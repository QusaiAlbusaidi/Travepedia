<body>

<div class="container">
    <h1>Travel Cost Estimator</h1>
    <form id="costForm">
        <label for="nights">Number of Nights (Desert Camping):</label>
        <input type="number" id="nights" min="0" required>

        <label for="trekkingTours">Number of Trekking Tours:</label>
        <input type="number" id="trekkingTours" min="0" required>

        <label for="dhowCruises">Number of Dhow Cruises:</label>
        <input type="number" id="dhowCruises" min="0" required>

        <label for="age">Your Age:</label>
        <input type="number" id="age" min="1" required>

        <button type="button" onclick="calculateCost()">Calculate Total Cost</button>
    </form>

    <div class="result" id="result"></div>
</div>

<script>
    // This function calculates the total travel cost based on user inputs
    function calculateCost() {
        // Getting user inputs from the form
        const nights = parseInt(document.getElementById('nights').value);
        const trekkingTours = parseInt(document.getElementById('trekkingTours').value);
        const dhowCruises = parseInt(document.getElementById('dhowCruises').value);
        const age = parseInt(document.getElementById('age').value);

        // Prices for each activity
        const desertCampingPrice = 150; // per night
        const trekkingTourPrice = 200;  // per tour
        const dhowCruisePrice = 75;     // per cruise

        // Calculate the base total cost using multiple operators (* and +)
        let total = (nights * desertCampingPrice) + (trekkingTours * trekkingTourPrice) + (dhowCruises * dhowCruisePrice);

        // Check if the user is elderly (above 60) to give 10% discount
        if (age > 60) {
            total = total - (total * 0.10); // Applying 10% discount
        }

        // Showing the final calculated amount with 2 decimal places
        document.getElementById('result').innerHTML = `Your estimated travel cost is: $${total.toFixed(2)}`;
    }
</script>

</body>
